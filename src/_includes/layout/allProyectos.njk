{% for item in proyects.misProyectos %}
    <div class="relative flex w-80 h-100 flex-col rounded-xl bg-gray-500 bg-clip-border text-gray-700 shadow-md mt-5">
        <div class="relative mx-4 -mt-6 h-40 overflow-hidden rounded-xl bg-blue-gray-500 bg-clip-border text-white shadow-lg
                    shadow-blue-gray-500/40 bg-gradient-to-r from-blue-500 to-blue-600">
            <img class="hover:scale-105 h-40 w-auto" src="{{ item.image }}"></div>
        <div class="p-6">
            <h5 class="mb-2 block font-sans text-xl font-semibold leading-snug tracking-normal text-orange-400 antialiased">
                {{ item.title }}
            </h5>
            <p class="h-24 block font-sans text-base font-light leading-relaxed antialiased text-justify overflow-y-scroll
                            text-gray-200">
                {{ item.shortDes }}
            </p>
        </div>
        <div class="p-6 pt-0 flex flex-row items-center">
            <button data-ripple-light="true" type="button" class="select-none rounded-lg bg-blue-500 py-3 px-6 text-center align-middle font-grantham text-xs font-bold uppercase hover:bg-gray-900
                            text-white shadow-md shadow-blue-500/20 transition-all hover:shadow-lg hover:shadow-blue-500/40 focus:opacity-[0.85]
                            focus:shadow-none active:opacity-[0.85] active:shadow-none disabled:pointer-events-none disabled:opacity-50
                            disabled:shadow-none">
                Leer m√°s
            </button>
            <div class="mx-5 flex flex-row">
                <a href="{{ item.repository }}" target="_blank">
                    <img class="w-8 mx-2 hover:opacity-50" src="/img/svg/github.svg"></a>
                <a href="{{ item.deploy }}" target="_blank">
                    <img class="w-8 mx-2 hover:opacity-50" src="/img/svg/web.svg"></a>
            </div>
        </div>
    </div>
{% endfor %}